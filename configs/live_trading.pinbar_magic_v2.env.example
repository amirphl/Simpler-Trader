# Live Trading Config (PinBar Magic v2)
# Copy to: configs/live_trading.pinbar_magic_v2.env

# Exchange
EXCHANGE=bitunix
TRADING_MODE=futures
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_PASSPHRASE=
TESTNET=true

# Strategy
STRATEGY_NAME=pinbar_magic_v2
TIMEFRAME=1h
PINBAR_SYMBOLS=ETHUSDT

# PinBar Magic v2
LEVERAGE=10
EQUITY_RISK_PCT=3.0
ATR_MULTIPLE=0.5
TRAIL_POINTS=1.0
TRAIL_OFFSET=1.0
SLOW_SMA_PERIOD=50
MEDIUM_EMA_PERIOD=18
FAST_EMA_PERIOD=6
ATR_PERIOD=14
ENTRY_CANCEL_BARS=3
ENTRY_ACTIVATION_MODE=next_bar
USE_STOP_FILL_OPEN_GAP=true
ENABLE_FRIDAY_CLOSE=true
FRIDAY_CLOSE_HOUR_UTC=16
ENABLE_EMA_CROSS_CLOSE=true
RISK_EQUITY_INCLUDE_UNREALIZED=true
RISK_EQUITY_MARK_SOURCE=close

# Risk / Positions
MARGIN_MODE=isolated
MAX_CONCURRENT_POSITIONS=1
DISABLE_SYMBOL_HOURS=0

# Persistence
KLINES_DB=./configs/live_trading.pinbar_magic_v2.env
LOG_FILE=./logs/live_trading.log

# Optional
# EXCHANGE_BASE_URL=
# HTTP_PROXY=
# HTTPS_PROXY=
# PROXY=

# Telegram
TELEGRAM_ENABLED=false
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
# TELEGRAM_PROXY=
# TELEGRAM_TIMEOUT=10.0
