# ETH 15m Backtest Configuration
# Scenario: ETH, 15m, 2025/01/01 until now, proxy at 127.0.0.1:12334, Take Profit 0.3, window size 2, leverage 1.0

# Strategy Configuration
STRATEGY_SYMBOL=ETHUSDT
STRATEGY_TIMEFRAME=30m
STRATEGY_WINDOW_SIZE=2
STRATEGY_LEVERAGE=10.0
STRATEGY_TAKE_PROFIT_PCT=0.003
STRATEGY_DOJI_SIZE=0.05
STRATEGY_STOP_LOSS_MODE=percent
STRATEGY_STOP_LOSS_PCT=0.005
STRATEGY_SKIP_WICK_FILTER=false
STRATEGY_SKIP_BB_FILTER=false
STRATEGY_BB_PERIOD=20
STRATEGY_BB_STDDEV=2.0
STRATEGY_VOLUME_FILTER_ENABLED=true
STRATEGY_STOCH_ENABLED=true
STRATEGY_STOCH_FIRST_LINE=k
STRATEGY_STOCH_FIRST_PERIOD=20
STRATEGY_STOCH_FIRST_THRESHOLD=
STRATEGY_STOCH_SECOND_LINE=k
STRATEGY_STOCH_SECOND_PERIOD=100
STRATEGY_STOCH_SECOND_THRESHOLD=
STRATEGY_STOCH_COMPARISON=gt
STRATEGY_STOCH_D_SMOOTHING=3

