# Live Trading Config (Heiken Ashi)
# Copy to: configs/live_trading.heiken_ashi.env

# Exchange
EXCHANGE=bitunix
TRADING_MODE=futures
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_PASSPHRASE=
TESTNET=true

# Strategy
STRATEGY_NAME=heiken_ashi
TIMEFRAME=15m
TOP_M_SYMBOLS=100
TOP_N_SIGNALS=5
PRICE_CHANGE_THRESHOLD=2.0
HEIKEN_ASHI_CANDLES=3
LEVERAGE=10
TAKE_PROFIT_PCT=1.0

# Risk / Positions
MARGIN_MODE=isolated
DISABLE_SYMBOL_HOURS=24
POSITION_SIZE_USDT=100.0
MAX_CONCURRENT_POSITIONS=5
MAX_POSITION_SIZE_PCT=10.0

# Persistence
STATE_FILE=./data/live_trading_state.json
POSITIONS_DB=./data/live_trading_positions.db
KLINES_DB=./configs/live_trading.heiken_ashi.env
LOG_FILE=./logs/live_trading.log

# Scheduling
CANDLE_READY_DELAY_SECONDS=30
EXECUTION_INTERVAL_MINUTES=5

# Optional
# EXCHANGE_BASE_URL=
# HTTP_PROXY=
# HTTPS_PROXY=
# PROXY=

# Telegram
TELEGRAM_ENABLED=false
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
# TELEGRAM_PROXY=
# TELEGRAM_TIMEOUT=10.0
